<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.NewClientFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_client_date"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:inputType="textCapSentences"
                android:ems="10"
                android:hint="@string/client_date"
                android:textStyle="bold"
                android:background="@drawable/edittext_custom" />

            <EditText
                android:id="@+id/edit_new_client"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:inputType="textCapSentences"
                android:ems="10"
                android:hint="@string/client_name"
                android:textStyle="bold"
                android:background="@drawable/edittext_custom" />

            <EditText
                android:id="@+id/edit_client_gender"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:inputType="textCapSentences"
                android:ems="10"
                android:hint="@string/client_gender"
                android:textStyle="bold"
                android:background="@drawable/edittext_custom" />

            <EditText
                android:id="@+id/edit_client_address"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:inputType="textCapSentences"
                android:ems="10"
                android:hint="@string/client_address"
                android:textStyle="bold"
                android:background="@drawable/edittext_custom" />

            <EditText
                android:id="@+id/edit_client_district"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:inputType="textCapSentences"
                android:ems="10"
                android:hint="@string/client_district"
                android:textStyle="bold"
                android:background="@drawable/edittext_custom" />

            <EditText
                android:id="@+id/edit_client_city"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:inputType="textCapSentences"
                android:ems="10"
                android:hint="@string/client_city"
                android:textStyle="bold"
                android:background="@drawable/edittext_custom" />

            <EditText
                android:id="@+id/edit_client_phone"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:ems="10"
                android:hint="@string/client_phone"
                android:inputType="phone"
                android:textStyle="bold"
                android:background="@drawable/edittext_custom" />

            <EditText
                android:id="@+id/edit_client_phone_two"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:ems="10"
                android:hint="@string/client_phone_two"
                android:inputType="phone"
                android:textStyle="bold"
                android:background="@drawable/edittext_custom" />

            <EditText
                android:id="@+id/edit_client_profession"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:inputType="textCapSentences"
                android:ems="10"
                android:hint="@string/client_profession"
                android:textStyle="bold"
                android:background="@drawable/edittext_custom"/>

            <Button
                android:id="@+id/btn_save_new_client"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_custom"
                android:text="@string/save_new_client"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>